style(type="text/css").
    #header {
        padding: 0;
        width: 100%;
        height: 200px;
        overflow:hidden;   
        position:relative;
    }

    #header-bg {
        position: absolute;
        width: 100%;
        //height: 100%;
        min-height: 100%;
        top: -500px;
        filter: brightness(50%);
    }

    .title {
        position: relative;
        text-align: center;
        color: white;
        top: 30%;
        font-size: 60px;
    }

.container-fluid#header
    img#header-bg(src="img/" + img_name)
    .title
        span #{header_title}
